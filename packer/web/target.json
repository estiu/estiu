{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "{{user `base_ami`}}",
    "instance_type": "t2.medium",
    "ssh_username": "ubuntu",
    "ami_name": "web {{timestamp}}"
  }],
  "provisioners": [
    {"type": "file", "source": "files", "destination": "~/"},
    {"type": "shell", "script": "build.sh"}
  ]
}