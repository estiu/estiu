{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `base_ami`}}",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "{{user `user`}}",
    "ami_name": "base {{timestamp}}",
    "tags": {"type": "base", "commit": "{{user `commit_sha`}}"}
  }],
  "provisioners": [
    {"type": "shell",
     "inline": "echo \"{{user `REPO_DEPLOY_PUBLIC_KEY`}}\" > ~/.ssh/deployment_key.pub; echo \"{{user `REPO_DEPLOY_PRIVATE_KEY`}}\" > ~/.ssh/deployment_key; "},
    {"type": "shell", "script": "build.sh"}
  ]
}