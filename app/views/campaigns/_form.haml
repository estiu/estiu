.row
  .col-xs-12.col-sm-8.col-md-6.col-lg-4
    = form_for(campaign, class: 'form-horizontal') do |f|
      .form-group
        = f.label :name, class: 'control-label'
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :description, class: 'control-label'
        = f.text_area :description, class: 'form-control'
      .form-group
        = f.label :goal_cents, class: 'control-label', value: 'Campaign Goal'
        .input-group
          %span.input-group-addon
            â‚¬
          = f.text_field :goal_cents_facade, class: 'form-control currency', value: (campaign.goal_cents / 100 if campaign.goal_cents)
        = f.hidden_field :goal_cents, class: 'form-control cents'
      .form-group
        = f.label :starts_at, class: 'control-label'
        = f.text_field :starts_at, class: 'form-control datepicker', readonly: true
      .form-group
        = f.label :ends_at, class: 'control-label'
        = f.text_field :ends_at, class: 'form-control datepicker', readonly: true
      .form-group
        = f.submit class: 'btn btn-primary'