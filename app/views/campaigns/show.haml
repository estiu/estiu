.col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3

  = render 'item', campaign: @campaign, listing: false
  
  %h3= t '.title', pledged: @campaign.pledged.format
  .row
    - padding = "5px"
    .col-xs-8.bordered-right{style: "padding-right: #{padding}"}
      = progress_bar @campaign.percent_pledged, t('.percent', percent: @campaign.percent_pledged)
    .col-xs-4{style: "padding-left: #{padding}"}
      = progress_bar 100, t('.goal', goal: @campaign.goal.format), :danger
  
  .top10
  
  - if user_signed_in?
    - if current_user.attendee?
      = render 'pledges/form', campaign: @campaign
  - else  
    = link_to t('.sign_up'),
      attendees_sign_up_path(user: {attendee_attributes: {entity_type_shown_at_signup: 'campaign', entity_id_shown_at_signup: @campaign.id}}),
      class: 'btn btn-success', id: 'sign-up-from-campaign'