%section#why
  .container.p30
    .row
      .col-lg-12.text-center
        %h2.section-heading= t '.title'
    .row
      .col-md-3.col-sm-6.why-item
        .full
          %img.img-responsive{:src => image_path("piano_flat.png")}
        .why-caption
          %h4= t '.artists_title'
          %p= t '.artists'
        %table.table
          %tody
            %tr
              %th
                %span.glyphicon.glyphicon-ok
                %span= t '.artists1'
            %tr
              %th
                %span.glyphicon.glyphicon-ok
                = t '.artists0'
            %tr
              %th
                %span.glyphicon.glyphicon-ok
