.row.devise-user-form
  .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4.bordered
    %h3= t '.title'
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = form_fields(f, 'devise.registrations.new') do |field|
        -# these will be rendered only for the attendee signup form
        = f.fields_for(:attendee, resource.build_attendee) do |af|
          = form_fields(af, 'devise.registrations.new.attendee') do |field|
            = field.(:first_name)
            = field.(:last_name)
        = field.(:email)
        = field.(:password)
        = field.(:password_confirmation, as: :password)
        = field.(:submit)